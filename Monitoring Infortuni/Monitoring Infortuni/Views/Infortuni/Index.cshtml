@model IEnumerable<Monitoring_Infortuni.Models.SediModel>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Data)
        </th>
        
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Sede)
        </td>
        <td>
            @Html.DisplayFor(modelItem => ((DateTime.Now - item.Data).Days));
        </td>
        @if ((DateTime.Now - item.Data).Days <= 10)
        {
            <td>
                Attenzione!
            </td>

        }else
        {
            <td>
                Tutto OK!
            </td>
        }


    </tr>
}

</table>
